{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"experimentalDecorators": true,
		"inlineSourceMap": false,
		"lib": ["DOM", "ESNext"],
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "es6"
	},
	"exclude": [
		"./lib/formats/**/*.js",
		"coverage",
		"docs",
		"node_modules",
		"public",
		"tmp",
		"__tests__",
		"**/*.test.tsx",
		"**/*.test.ts"
	]
}
