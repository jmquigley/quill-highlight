{
	"name": "quill-markup",
	"version": "0.0.33",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "A markup highlighting module for the Quill text editor",
	"private": false,
	"debug": false,
	"license": "BSD-3-Clause",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/quill-markup"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/quill-markup/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./public/bundle.js",
	"types": "./public/bundle.d.ts",
	"files": [
		"public/*.css",
		"public/*.ttf",
		"public/bundle.js",
		"public/bundle.d.ts",
		"public/highlights"
	],
	"peerDependencies": {
		"quill": "1.3.x"
	},
	"dependencies": {
		"quill": "^1.3.6"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/plugin-proposal-class-properties": "^7.3.4",
		"@babel/plugin-transform-runtime": "^7.3.4",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.3.4",
		"@types/express": "^4.16.1",
		"@types/fs-extra": "^5.0.5",
		"@types/highlight.js": "^9.12.3",
		"@types/jest": "^24.0.9",
		"@types/lodash": "^4.14.121",
		"@types/node": "^11.10.4",
		"@types/quill": "^2.0.2",
		"@types/sinon": "^7.0.8",
		"@types/xregexp": "^3.0.29",
		"babel-loader": "^8.0.5",
		"ccount": "^1.0.3",
		"coveralls": "^3.0.3",
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.0",
		"dts-bundle-generator": "^2.1.0",
		"express": "^4.16.4",
		"file-loader": "^3.0.1",
		"fs-extra": "^7.0.1",
		"hash.js": "^1.1.7",
		"highlight.js": "^9.15.6",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^24.1.0",
		"lodash": "^4.17.11",
		"mini-css-extract-plugin": "^0.5.0",
		"mock-css-modules": "^1.0.0",
		"parchment": "^1.1.4",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-modules": "^1.4.1",
		"postcss-preset-env": "^6.6.0",
		"precss": "^4.0.0",
		"prettier": "^1.16.4",
		"process-nextick-args": "^2.0.0",
		"shelljs": "^0.8.3",
		"sinon": "^7.2.6",
		"style-loader": "^0.23.1",
		"tslint": "^5.13.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.3333",
		"util.ds": "^0.0.47",
		"util.fixture": "0.0.68",
		"util.fontlist": "^0.0.15",
		"util.join": "^0.0.23",
		"util.leader": "^0.0.42",
		"util.matches": "^0.0.11",
		"util.pkgwrap": "^0.0.102",
		"util.rstrip": "^0.0.46",
		"util.section": "^0.0.14",
		"webpack": "^4.29.6",
		"webpack-bundle-analyzer": "^3.1.0",
		"webpack-cli": "^3.2.3",
		"xregexp": "^4.2.4"
	},
	"pkgwrap": {
		"cleanup": [
			"public/bundle.js",
			"public/bundle.d.ts",
			"public/bundle.js.map",
			"server.js",
			"server.d.ts",
			"server.js.map",
			"./public/styles.css.map",
			"./bin/setupDOM.d.ts",
			"./bin/setupDOM.js",
			"./bin/setupDOM.js.map",
			"./lib/**/*.d.ts",
			"./lib/**/*.js.map",
			"./lib/markup.js",
			"./lib/modes/**/*.js",
			"./lib/**/*.d.ts"
		]
	},
	"scripts": {
		"all": "yarn install && cross-env NODE_ENV=production yarn build && yarn test",
		"build": "yarn clean && yarn build:highlights && yarn lint && yarn prettier && pkgwrap --build --webpack && yarn build:server && yarn types",
		"build:highlights": "node bin/buildHighlights.js",
		"build:server": "babel server.js -o server.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"lint": "pkgwrap --lint",
		"prepublishOnly": "yarn run all",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"start": "node server.js",
		"test": "jest",
		"types": "dts-bundle-generator -o ./public/bundle.d.ts index.ts",
		"watch": "webpack --watch --progress"
	}
}
